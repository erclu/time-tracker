{
  "compilerOptions": {
    // ----------------- required by clasp
    "lib": [
      "esnext"
    ],
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true
  },
  "exclude": [
    "node_modules"
  ]
}
